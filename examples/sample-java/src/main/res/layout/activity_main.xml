<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- Title Label -->
    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MonetaiSDK Demo"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Status Label -->
    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SDK Status: Initializing..."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/titleLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Predict Button -->
    <Button
        android:id="@+id/predictButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Predict Purchase"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:minHeight="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="-30dp" />

    <!-- Log Event Button -->
    <Button
        android:id="@+id/logEventButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Log Event"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_secondary"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/predictButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp" />

    <!-- Discount Status Label -->
    <TextView
        android:id="@+id/discountStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount: None"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/logEventButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Subscription Status Label -->
    <TextView
        android:id="@+id/subscriptionStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구독 상태: ❌ 비구독자"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/discountStatusLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Result Label -->
    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tap 'Predict Purchase' button to test AI-based paywall"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textAlignment="center"
        android:maxLines="0"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/subscriptionStatusLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 